generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  nim          String       @id @db.VarChar(12)
  nama         String
  kelas        String
  jurusan      String
  jenis_kelamin Jenis_Kelamin
  foto_profile String? //menambahkan field foto_profile
    // Ensure this matches the DTO property
}

enum Jenis_Kelamin {
  L
  P
}

model user {
  id Int @id @default(autoincrement())
  username String @unique
  password String 
  role Role @default(USER)

  create_at DateTime @default(now())//membuat field create_at untuk mengetahui kapan data tersebut dibuat
  foto_profile String? //menambahkan field foto_profile

    
}

enum Role {
  USER
  ADMIN
}

